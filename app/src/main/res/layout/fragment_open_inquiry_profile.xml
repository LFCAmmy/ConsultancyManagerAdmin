<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    tools:context=".ConsultancyProfile.OpenInquiryProfileFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        android:elevation="10dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/my_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/medium_padding"
                android:text="My Details"
                android:textColor="@color/primary_text"
                android:textSize="25sp" />


            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/my_details"
                android:layout_marginTop="@dimen/medium_padding"
                android:orientation="vertical"
                android:padding="@dimen/medium_padding">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="6dp"
                        android:text="Name"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:text="Name"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Address"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:text="Address"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Contact"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:text="Contact"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Email Address"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:text="Email Address"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="DOB"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:text="DOB"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Qualification"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />


                    <TextView
                        android:id="@+id/qualification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:text="Qualification"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Complete Year"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/complete_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:text="Complete Year"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_extra_large_padding">

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btn_back"
                        android:layout_width="80dp"
                        android:layout_height="45dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:gravity="center"
                        android:textAllCaps="true"
                        fancy:fb_borderColor="@color/colorPrimaryDark"
                        fancy:fb_borderWidth="1dp"
                        fancy:fb_defaultColor="@color/colorTransparent"
                        fancy:fb_focusColor="@color/colorPrimaryDark"
                        fancy:fb_radius="@dimen/small_margin"
                        fancy:fb_text="Back"
                        fancy:fb_textColor="@color/colorPrimaryDark" />

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btn_edit"
                        android:layout_width="80dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:gravity="center"
                        android:textAllCaps="true"
                        fancy:fb_borderColor="@color/colorPrimaryDark"
                        fancy:fb_borderWidth="1dp"
                        fancy:fb_defaultColor="@color/colorTransparent"
                        fancy:fb_focusColor="@color/colorPrimaryDark"
                        fancy:fb_radius="@dimen/small_margin"
                        fancy:fb_text="Edit"
                        fancy:fb_textColor="@color/colorPrimaryDark" />


                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btn_send"
                        android:layout_width="80dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:gravity="center"
                        android:textAllCaps="true"
                        fancy:fb_borderColor="@color/colorPrimaryDark"
                        fancy:fb_borderWidth="1dp"
                        fancy:fb_defaultColor="@color/colorTransparent"
                        fancy:fb_focusColor="@color/colorPrimaryDark"
                        fancy:fb_radius="@dimen/small_margin"
                        fancy:fb_text="Send"
                        fancy:fb_textColor="@color/colorPrimaryDark" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>