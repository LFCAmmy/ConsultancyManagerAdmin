<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/about_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_padding"
            android:background="@drawable/rounded_edittext"
            android:orientation="vertical"
            android:padding="@dimen/medium_padding">

            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rational_about_1" />

            <TextView
                android:id="@+id/read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/about"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/medium_padding"
                android:background="@color/messageBlue"
                android:padding="@dimen/medium_padding"
                android:text="READ MORE"
                android:textColor="@color/white" />

        </RelativeLayout>

        <TextView
            android:id="@+id/core"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_detail"
            android:layout_centerHorizontal="true"
            android:text="Our Core Features"
            android:textColor="#15253e"
            android:textSize="20sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/core">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_padding"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="@dimen/very_large_padding"
                        android:layout_gravity="center"
                        android:background="@drawable/red_circle_layout"
                        android:src="@drawable/ic_tic_tac_toe" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#15253e"
                        android:textStyle="bold"
                        android:text="IELTS Practice"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="@dimen/very_large_padding"
                        android:layout_gravity="center"
                        android:background="@drawable/red_circle_layout"
                        android:src="@drawable/ic_checklist" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#15253e"
                        android:textStyle="bold"
                        android:text="Test Preperation Class"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="@dimen/very_large_padding"
                        android:background="@drawable/red_circle_layout"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_air_freight" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#15253e"
                        android:textStyle="bold"
                        android:text="Abroad Studies"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="@dimen/very_large_padding"
                        android:layout_gravity="center"
                        android:background="@drawable/red_circle_layout"
                        android:src="@drawable/ic_profit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#15253e"
                        android:textStyle="bold"
                        android:text="Career Counselling"/>
                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#15253e"
            android:layout_marginTop="@dimen/medium_padding"
            android:layout_below="@id/horizontal"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="@dimen/very_large_padding"
            android:text="Rational Education Consultancy â€“ Your Trusted Partner for Abroad Study"
            />


    </RelativeLayout>

</ScrollView>