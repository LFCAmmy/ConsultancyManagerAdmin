<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f5f4"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/about_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_padding"
            android:background="@drawable/rounded_edittext"
            android:orientation="vertical"
            android:padding="@dimen/medium_padding">

            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/acheivers_about" />

            <TextView
                android:id="@+id/read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/about"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/medium_padding"
                android:background="@color/messageBlue"
                android:padding="@dimen/medium_padding"
                android:text="READ MORE"
                android:textColor="@color/white" />

        </RelativeLayout>

        <TextView
            android:id="@+id/core"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_detail"
            android:layout_centerHorizontal="true"
            android:text="SERVICES WE PROVIDE"
            android:textColor="#e9182a"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/core"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_padding"
                android:layout_below="@id/core"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="@dimen/very_large_padding"
                        android:layout_gravity="center"
                        android:background="@drawable/white_circle_layout"
                        android:elevation="3dp"
                        android:src="@drawable/ic_counsealing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#15253e"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="Counseling"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="@dimen/very_large_padding"
                        android:layout_gravity="center"
                        android:elevation="3dp"
                        android:background="@drawable/white_circle_layout"
                        android:src="@drawable/ic_test_preparation" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#15253e"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="Test Preperation"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="@dimen/very_large_padding"
                        android:background="@drawable/white_circle_layout"
                        android:layout_gravity="center"
                        android:elevation="3dp"
                        android:src="@drawable/ic_university_campus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#15253e"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="Admission and Scholarships"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_padding"
                android:layout_below="@id/core"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="@dimen/very_large_padding"
                        android:layout_gravity="center"
                        android:elevation="3dp"
                        android:background="@drawable/white_circle_layout"
                        android:src="@drawable/ic_plane" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#15253e"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="Departure"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="@dimen/very_large_padding"
                        android:layout_gravity="center"
                        android:elevation="3dp"
                        android:background="@drawable/white_circle_layout"
                        android:src="@drawable/ic_interview" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#15253e"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:text="Interview Preparation"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="@dimen/very_large_padding"
                        android:background="@drawable/white_circle_layout"
                        android:layout_gravity="center"
                        android:elevation="3dp"
                        android:src="@drawable/ic_document" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#15253e"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:text="Documentation and Visa Guidance"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e9182a"
            android:layout_marginTop="@dimen/medium_padding"
            android:layout_below="@id/horizontal"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="@dimen/very_large_padding"
            android:text="Acheivers Education Consultancy – Your Trusted Partner for Abroad Study"
            />


    </RelativeLayout>

</ScrollView>